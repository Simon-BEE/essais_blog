{% extends "/layout/admindefault.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<section class="admin-index">
    
    <article class="onePost">
    <h2>Latest article</h2>
    <h3>{{ post.name }}</h3>
    <p>{{ post.getExcerpt(200) }}</p>
    <p><a href="{{ post.AdminUrl }}">edit</a></p>
    </article>

    <article class="onePost">
    <h2>Latest category</h2>
    <h3>{{ category.name }}</h3>
    <p><a href="{{ category.AdminUrl }}">edit</a></p>
    </article>

    <article class="onePost">
    <h2>Latest user</h2>
    <h3>{{ user.username }}</h3>
    </article>
    
</section>
{% endblock %}