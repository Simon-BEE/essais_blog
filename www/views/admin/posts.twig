{% extends "/layout/admindefault.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<section class="admin-posts">
    <h2>Posts' list</h2>
    <p><a href="/admin/postInsert">Add a new post</a></p>
{% for post in posts %}
    <article class="onePost">
    <h3>{{ post.name }}</h3>
    <p>{{ post.getExcerpt(200) }}</p>
    <p><a href="{{ post.AdminUrl }}">edit</a></p>
    </article>
{% endfor %}
</section>
{{ paginate | raw }}
{% endblock %}